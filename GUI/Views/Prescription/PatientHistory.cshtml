@model GUI.Models.PDP

@{
    ViewBag.Title = "PatientHistory";
    Layout = "~/Views/PrescriptionLayout.cshtml";
}
<i class='fas fa-angle-right'></i>
<!--personal deatsils-->
<section class="row tm-contact-row" style="background-color:white; position:relative; left:125px; top:50px; width:1290px; opacity:0.8;">
    <h1 class="font-weight-bold">Personal Details</h1>
    <button class="fas btn" onclick="goBack()" style="position:relative; left:900px; top:-20px;">	&#xf35a;</button>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.patient.IdP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.DateOfBirthd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.patient.PhonNumber)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.IdP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.gender)
            </td>
            <td id="Id">
                @Html.DisplayFor(modelItem => Model.patient.DateOfBirthd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.patient.PhonNumber)
            </td>
            <th></th>
        </tr>
    </table>
</section>
<!--end personal deatsils-->
<!--prescriptions-->
<section class="row tm-contact-row" style="background-color:white; position:relative; top:50px; left:125px; width:1290px; opacity:0.8;">
    <h1 class="font-weight-bold">Medical History</h1>
    <label style="position:relative; top:-40px; left:650px;  color:black;">Search by Ndc or by medicine name:</label>
    <input type="text" id="myInput" onkeyup="myFunction()" style="position:relative; width:300px; top:-10px; left:350px; color:black; background-color:azure;">
    <table class="table" id="myTable">
        <tr>
            <th>
                <label>Medicine Name</label>
            </th>
            <th>
                <label>From</label>
            </th>
            <th>
                <label>Until</label>
            </th>
            <th>
                <label>Notes</label>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model.prescriptionList)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.medicineName)
        </td>
        <td id="IdS">
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td id="IdE">
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.notes)
        </td>
    </tr>
                }
            
        </table>
</section>

<!--end prescriptins-->



@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
